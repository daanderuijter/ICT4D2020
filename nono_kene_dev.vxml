<?xml version="1.0" encoding="UTF-8"?>
<vxml version = "2.1" >

<var name="quantity"/>
<var name="path" expr="'https://raw.githubusercontent.com/daanderuijter/ICT4D2020/dev/wavs/'"/>

<!-- Welcome message -->
<form id="welcomeMessage">
<block>
<prompt bargein="false">
	<audio src="path + welcome_message.wav">
		This is some backup TTS if the audio file fails. 
	</audio>
</prompt>
<goto next="#MainMenu"/>
</block>
</form>

<!-- Menu for Selecting Buy or Sell using DTMF-->
<menu id="MainMenu" dtmf="true" scope="dialog">   
	<prompt bargein="true">
		<audio src="https://raw.githubusercontent.com/daanderuijter/ICT4D2020/dev/wavs/menu_select_buy_or_sell.wav">
			If you want to buy Milk press 1. If you want to sell Milk press 2.
		</audio>
	</prompt>
	<choice event="buy" dtmf="1" message="Buy"></choice>
	<choice next="#sell" dtmf="2"></choice>
</menu>

<catch event="buy">
	<prompt>
 		<audio src="https://raw.githubusercontent.com/daanderuijter/ICT4D2020/dev/wavs/menu_buy_milk_chosen.wav">
  			You have chosen to buy milk.
		</audio>
  		<break time="1000"/>
 	</prompt>
<goto next="#EndMenu"/>
</catch> 

<catch event="correctSell_event">
<goto next="#correctSell"/>
</catch>

<menu id="sell" dtmf="true" scope="dialog">
	<prompt bargein="true">
   		<audio src="https://raw.githubusercontent.com/daanderuijter/ICT4D2020/dev/wavs/menu_sell_milk_chosen.wav">
   			You have chosen to sell milk. If this is incorrect press 1. Otherwise, press 2.
		</audio>
   </prompt>
   <choice next="#MainMenu" dtmf="1"></choice>
   <choice event="correctSell_event" dtmf="2"></choice>
</menu>

<form id="correctSell">
	<!-- Quantity field-->
	<field name="form_quantity" type="number">
		<prompt>
			<audio src="https://raw.githubusercontent.com/daanderuijter/ICT4D2020/dev/wavs/sell_quantity_enter.wav"> 
				Enter the quantity of milk to sell, and press hash.
			</audio>
		</prompt>
	<!--"filled" event for quantity field-->
   	<filled>
	<!--save entered value in variable-->
 	<assign name="quantity" expr="form_quantity"/>
		</filled>
	</field>
	<!-- "filled" event for entire form-->
    <filled>
		<goto next="#sellConfirm"/> <!--go to EndMenu-->
	</filled>
</form>

<menu id="sellConfirm" dtmf="true" scope="dialog">
	<prompt bargein="true">
		<audio src="https://raw.githubusercontent.com/daanderuijter/ICT4D2020/dev/wavs/sell_quantity_confirm.wav">
			The quantity of milk you have selected to sell is.
		</audio>
			<value expr="quantity"/>
			<break time="500"/>
		<audio src="https://raw.githubusercontent.com/daanderuijter/ICT4D2020/dev/wavs/sell_confirm_correct_or_incorrect.wav">
			If this is incorrect press 1. Otherwise, press 2
		</audio>
	</prompt>
   <choice next="#correctSell" dtmf="1"></choice>
   <choice next="#EndMenu" dtmf="2"></choice>
</menu> 

<menu id="EndMenu" dtmf="true" scope="dialog">
   <prompt bargein="false">
   		<audio src="https://raw.githubusercontent.com/daanderuijter/ICT4D2020/dev/wavs/end_menu.wav">
   			If you want to end the call, press 1. If you want to go back to the start, press 2
   		</audio>
   </prompt>
   <choice event="end" dtmf="1"></choice>
   <choice next="#MainMenu" dtmf="2"></choice>
</menu>

<!-- end event. close call-->
<catch event="end"> 
   <prompt>Goodbye!</prompt>
   <disconnect/> 
</catch>
</vxml>
